@{
    ViewData["Title"] = "Home Page";
}

<h1>Programlista - Humor</h1>

@foreach (var program in Model.Programs)
{
    <h2>@program.Channel.Name</h2>
    <div class="program-container">
        <div class="program-info">
            <h3>@program.Name</h3>
            <img src="@program.ProgramImage" alt="Program Image" />
            <p>@program.Description</p>
        </div>

        <div class="podfiles">
            <h5>Senaste podavsnitten:</h5>
            @foreach (var pod in @program.Podfiles)
            {
                <div class="podfile">
                    <ul>
                        <li><span>Titel:</span> @pod.Title</li>
                        <li><span>Publicerat:</span> @pod.PublishDate</li>
                        <li><span>Längd:</span> @pod.Duration</li>
                        <audio controls>
                            <source src="@pod.Url" type="audio/mp3">
                        </audio>
                        <hr>
                    </ul>
                </div>
            }
        </div>
        
        <div>
            <a class="btn btn-primary" href="@Url.Action("Program", "Home", new { programId = program.Id })">Visa program</a>
        </div>
    </div>
}